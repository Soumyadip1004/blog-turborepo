{
  "extends": ["../../biome.json"],

  "vcs": {
    "useIgnoreFile": false
  },

  "files": {
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "bracketSameLine": false
    }
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noUnknownAtRules": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "info",
          "fix": "safe",
          "options": {
            "attributes": ["className"],
            "functions": ["cn", "cva", "tw", "clsx"]
          }
        }
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  }
}
