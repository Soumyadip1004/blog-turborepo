{
  "name": "@repo/auth",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsup ./src/index.ts --dts",
    "dev": "tsup ./src/index.ts --watch --onSuccess \"tsc --emitDeclarationOnly --declaration\""
  },
  "dependencies": {
    "@repo/db": "*",
    "better-auth": "^1.3.34",
    "tsup": "^8.5.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/node": "^24.10.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./auth": {
      "require": "./dist/auth.js",
      "types": "./dist/auth.d.ts"
    },
    "./auth-client": {
      "require": "./dist/auth-client.js",
      "types": "./dist/auth-client.d.ts"
    }
  }
}
